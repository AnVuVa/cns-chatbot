	"item": [
		{
			"name": "Chat",
			"item": [
				{
					"name": "Send Message",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": \"test_user_01\",\n    \"question\": \"Xin chào, bạn có thể giúp gì?\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/chat/message",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"chat",
								"message"
							]
						},
						"description": "Gửi tin nhắn chat.\n\nPayload:\n- userId: ID người dùng\n- question: Câu hỏi\n- sessionId (Optional): ID phiên chat"
					}
				},
				{
					"name": "Send Message with Session",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"userId\": \"test_user_01\",\n    \"sessionId\": \"<PASTE_SESSION_ID>\",\n    \"question\": \"Tên tôi là gì?\"\n}"
						},
						"url": {
							"raw": "{{base_url}}/api/chat/message",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"api",
								"chat",
								"message"
							]
						},
						"description": "Tiếp tục hội thoại với sessionId để test conversation memory."
					}
				}
			]
		},
		{
			"name": "Messenger Webhook",
			"item": [
				{
					"name": "Verify Webhook",
					"request": {
						"method": "GET",
						"url": {
							"raw": "{{base_url}}/webhook/messenger?hub.mode=subscribe&hub.verify_token={{verify_token}}&hub.challenge=CHALLENGE_CODE",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"webhook",
								"messenger"
							],
							"query": [
								{
									"key": "hub.mode",
									"value": "subscribe"
								},
								{
									"key": "hub.verify_token",
									"value": "{{verify_token}}"
								},
								{
									"key": "hub.challenge",
									"value": "CHALLENGE_CODE"
								}
							]
						},
						"description": "Facebook webhook verification endpoint."
					}
				},
				{
					"name": "Simulate Messenger Event",
					"request": {
						"method": "POST",
						"header": [
							{
								"key": "Content-Type",
								"value": "application/json"
							}
						],
						"body": {
							"mode": "raw",
							"raw": "{\n    \"object\": \"page\",\n    \"entry\": [{\n        \"messaging\": [{\n            \"sender\": {\"id\": \"TEST_PSID\"},\n            \"message\": {\"text\": \"Hello bot\"}\n        }]\n    }]\n}"
						},
						"url": {
							"raw": "{{base_url}}/webhook/messenger",
							"host": [
								"{{base_url}}"
							],
							"path": [
								"webhook",
								"messenger"
							]
						},
						"description": "Simulate a Messenger webhook event (for testing)."
					}
				}
			]
		},
